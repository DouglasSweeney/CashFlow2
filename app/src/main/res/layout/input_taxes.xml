<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_taxes"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        style="@style/Title"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/taxes_federal_tax_rate_label"
            android:text="@string/taxes_federal_tax_rate_label"
            style="@style/InputLabel"/>

        <EditText
            android:id="@+id/taxes_federal_tax_rate"
            android:layout_toRightOf="@id/taxes_federal_tax_rate_label"
            android:inputType="numberDecimal"
            android:maxLength="7"
            style="@style/InputEntry" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/taxes_state_tax_rate_label"
            android:text="@string/taxes_state_tax_rate_label"
            style="@style/InputLabel"/>

        <EditText
            android:id="@+id/taxes_state_tax_rate"
            android:layout_toRightOf="@id/taxes_state_tax_rate_label"
            android:inputType="numberDecimal"
            android:maxLength="7"
            style="@style/InputEntry" />
    </RelativeLayout>

</LinearLayout>
</ScrollView>