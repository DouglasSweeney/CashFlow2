<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container_403b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        style="@style/Title"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_403b_balance_label"
            android:text="@string/account_403b_balance_label"
            style="@style/InputLabel"/>

        <EditText
            android:id="@+id/account_403b_balance"
            android:layout_toRightOf="@id/account_403b_balance_label"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:inputType="numberDecimal"
            android:digits="0123456789.,$"
            style="@style/InputEntry" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_403b_growth_rate_label"
            android:text="@string/account_401k_growth_rate_label"
            style="@style/InputLabel"/>

        <EditText
            android:id="@+id/account_403b_growth_rate"
            android:layout_toRightOf="@id/account_403b_growth_rate_label"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="5"
           style="@style/InputEntry"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_403b_contributions_label"
            android:text="@string/account_403b_contributions_label"
            style="@style/InputLabel"/>

        <EditText
            android:id="@+id/account_403b_contributions"
            android:layout_toRightOf="@id/account_403b_contributions_label"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:digits="0123456789.,$"
            style="@style/InputEntry"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_403b_start_withdrawals_age_label"
            android:text="@string/account_403b_start_withdrawals_age_label"
            style="@style/InputLabel"/>

        <EditText
            android:id="@+id/account_403b_start_withdrawals_age"
            android:layout_toRightOf="@id/account_403b_start_withdrawals_age_label"
            android:inputType="number"
            android:maxLength="3"
            style="@style/InputEntry"/>
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_403b_number_of_withdrawals_label"
            android:text="@string/account_403b_start_number_of_withdrawals_label"
            style="@style/InputLabel"/>

        <EditText
            android:id="@+id/account_403b_number_of_withdrawals"
            android:layout_toRightOf="@id/account_403b_number_of_withdrawals_label"
            android:inputType="number"
            android:maxLength="3"
            style="@style/InputEntry"/>
    </RelativeLayout>
</LinearLayout>
</ScrollView>
</RelativeLayout>